<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ListView?>
<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.javafxapp.Controllers.UserBookController"
            prefWidth="900" prefHeight="700">

    <!-- LEFT SIDEBAR -->
    <left>
        <VBox prefWidth="250" spacing="20"
              style="-fx-background-color: linear-gradient(to bottom, #d8eaff, #b7d8ff); -fx-padding: 20;">
            <children>

                <Button fx:id="backBtn" text="Back"
                        style=" -fx-background-color: #ff6b6b;
                                -fx-text-fill: white;
                                -fx-font-size: 16px;
                                -fx-background-radius: 12;
                                -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 8, 0, 0, 2);"
                        prefHeight="40" prefWidth="200" onAction="#onBackClick"/>

                <Button fx:id="myBookingsBtn" text="My Bookings"
                        style="-fx-background-color: #76a9ff;
                               -fx-text-fill: white;
                               -fx-font-size: 16px;
                               -fx-background-radius: 12;
                               -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 8, 0, 0, 2);"
                        prefHeight="40" prefWidth="200"/>

                <Button fx:id="bookRoomBtn" text="Book Room"
                        style="-fx-background-color: #76a9ff;
                               -fx-text-fill: white;
                               -fx-font-size: 16px;
                               -fx-background-radius: 12;
                               -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 8, 0, 0, 2);"
                        prefHeight="40" prefWidth="200"/>

            </children>
        </VBox>
    </left>

    <!-- TOP BAR -->
    <top>
        <HBox prefHeight="70"
              style="-fx-background-color: #a3c8ff; -fx-padding: 20; -fx-alignment: center-left;"
              spacing="20">
            <children>
                <Label text="User Dashboard"
                       style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #1a1a1a;"/>
            </children>
        </HBox>
    </top>

    <!-- MAIN CONTENT -->
    <center>
        <AnchorPane fx:id="contentPane" style="-fx-background-color: #eef5ff;">

            <children>

                <VBox layoutX="20" layoutY="20" spacing="20" prefWidth="600">

                    <!-- AVAILABLE ROOMS LIST -->
                    <VBox spacing="10">
                        <Label text="Available Rooms:"
                               style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

                        <ListView fx:id="availableRoomsList"
                                  prefHeight="400"
                                  style="-fx-background-radius: 8;
                                     -fx-border-color: #b0c4de;
                                     -fx-border-radius: 8;"
                        />
                    </VBox>

                    <!-- INPUT ROOM ID -->
                    <VBox spacing="8">
                        <Label text="Enter Room ID to Book:"
                               style="-fx-font-size: 16px;"/>
                        <TextField fx:id="roomIdField"
                                   promptText="Room ID"
                                   style="-fx-background-radius: 8;
                                      -fx-padding: 8;"/>
                    </VBox>

                    <!-- BOOK BUTTON + ERROR LABEL -->
                    <HBox spacing="15" alignment="CENTER_LEFT">

                        <Button fx:id="bookBtn" text="Book Selected Room"
                                onAction="#onBookClick"
                                style="-fx-background-color: #4a90e2;
               -fx-text-fill: white;
               -fx-font-size: 16px;
               -fx-background-radius: 10;
               -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 8, 0, 0, 2);"
                                prefHeight="40" prefWidth="200"/>

                        <Label fx:id="errorLabel" text=""
                               style="-fx-font-size: 14px;
              -fx-text-fill: red;"
                               opacity="0"/>

                    </HBox>


                </VBox>

            </children>
        </AnchorPane>
    </center>


</BorderPane>
