<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.javafxapp.Controllers.AdminController"
            prefWidth="900" prefHeight="700">


    <left>
        <VBox prefWidth="250" spacing="20" style="-fx-background-color: #2b2b2b; -fx-padding: 20;">
            <children>
                <Button fx:id="backBtn" text="Back"
                        style="-fx-background-color: #c0392b; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 8;"
                        prefHeight="40" prefWidth="200" onAction="#onBackClick"/>
                <Button fx:id="roomsBtn" text="Rooms Management"
                        style="-fx-background-color: #4682b4; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 8;"
                        prefHeight="40" prefWidth="200" onAction="#onRoomsClick"/>
                <Button fx:id="bookingsBtn" text="Bookings Management"
                        style="-fx-background-color: #4682b4; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 8;"
                        prefHeight="40" prefWidth="200" onAction="#onBookingsClick"/>
            </children>
        </VBox>
    </left>


    <top>
        <HBox prefHeight="70" style="-fx-background-color: #3a3a3a; -fx-padding: 20; -fx-alignment: center-left;"
              spacing="20">
            <children>
                <Label text="Admin Dashboard"
                       style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;"/>
            </children>
        </HBox>
    </top>


    <center>
        <AnchorPane fx:id="contentPane" style="-fx-background-color: #f4f4f4;">
            <children>
                <Label text="Welcome Admin" layoutX="20" layoutY="20"
                       style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

            </children>
        </AnchorPane>
    </center>

</BorderPane>